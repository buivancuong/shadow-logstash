{
	"settings":{
		"analysis":{
			"analyzer":{
				"default":{"type":"custom","tokenizer":"my_tokenizer","filter":["lowercase"]},
				"default_search":{"type":"custom","tokenizer":"keyword","filter":["lowercase"]}
			},
			"tokenizer":{
				"my_tokenizer":{"type":"ngram","min_gram":2,"max_gram":12}
			}
		},
		"max_ngram_diff":10
	},
	"mappings":{
		"dynamic": false,
		"properties":{
			"@timestamp":			{"type":"date"},
			"@version":				{"type":"keyword"},
			"message":				{"type":"keyword"},
			"tags":					{"type":"keyword"},
			"LogTime":				{"type":"date","format":"yyyy-MM-dd/HH:mm:ss"},

			"SrcIP":				{"type":"ip"},
			"SrcIP_CityName":		{"type":"keyword"},
            "SrcIP_RegionName":		{"type":"keyword"},
            
            "Agent":                {"type":"keyword"},
            "CCASN":                {"type":"keyword"},
            "CC_DNS":               {"type":"keyword"},
            "CCGeo":                {"type":"keyword"},
            "CC_IP":                {"type":"keyword"},
            "CCPort":               {"type":"keyword"},
            "CCSector":             {"type":"keyword"},
            "Family":               {"type":"keyword"},
            "FileName":             {"type":"keyword"},
            "HostName":             {"type":"keyword"},
            "Infection":            {"type":"keyword"},
            "Orgs":                 {"type":"keyword"},
            "Proxy":                {"type":"keyword"},
            "PublicSource":         {"type":"keyword"},
            "SrcIP_ASN":            {"type":"keyword"},
            "SrcPort":              {"type":"keyword"},
            "SSLCipher":            {"type":"keyword"},
            "Tag":                  {"type":"keyword"},
            "Type":                 {"type":"keyword"},
            "URL":                  {"type":"keyword"}
		}
	}
}
