{
	"settings":{
		"analysis":{
			"analyzer":{
				"default":{"type":"custom","tokenizer":"my_tokenizer","filter":["lowercase"]},
				"default_search":{"type":"custom","tokenizer":"keyword","filter":["lowercase"]}
			},
			"tokenizer":{
				"my_tokenizer":{"type":"ngram","min_gram":2,"max_gram":12}
			}
		},
		"max_ngram_diff":10
	},
	"mappings":{
		"dynamic": false,
		"properties":{
			"@timestamp":			{"type":"date"},
			"@version":				{"type":"keyword"},
			"message":				{"type":"keyword"},
			"tags":					{"type":"keyword"},
			"LogTime":				{"type":"date","format":"yyyy-MM-dd/HH:mm:ss"},

			"SrcIP":				{"type":"ip"},
			"SrcIP_CityName":		{"type":"keyword"},
            "SrcIP_RegionName":		{"type":"keyword"},
            
            "Action":				{"type":"keyword"},
            "CreationTime":			{"type":"keyword"},
			"Connection":			{"type":"keyword"},
			"HostName":             {"type":"keyword"},
			"HTTPContentLength":	{"type":"keyword"},
			"HTTPContentType":      {"type":"keyword"},
			"HTTPCookie":           {"type":"keyword"},
			"HTTPDate":             {"type":"keyword"},
            "HTTPResponseCode":     {"type":"keyword"},
            "HTTPReason":           {"type":"keyword"},
            "HTTPVer":              {"type":"keyword"},
			"Protocol":				{"type":"keyword"},
			"Server":				{"type":"keyword"},
            "SrcPort":				{"type":"keyword"},
			"Tag":                  {"type":"keyword"},
			"TransferEncoding":		{"type":"keyword"},
            "WWWAuthenticate":      {"type":"keyword"}
		}
	}
}
